{% extends 'base.html.twig' %}

{% block title %}Anime index{% endblock %}

{% block body %}
    <h1>Anime index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Cover</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for anime in animes %}
            <tr>
                <td>{{ anime.title }}</td>
                <td>{{ anime.description }}</td>
                <td>{% if anime.cover %}
                    <img src="{{ asset('images/anime/' ~ anime.cover) }}" alt="{{ anime.title }}" style="width: 100px;">
                {% endif %}</td>
                <td>{{ anime.updatedAt ? anime.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_anime_show', {'id': anime.id}) }}"class="btn btn-primary">show</a>
                    <a href="{{ path('app_anime_edit', {'id': anime.id}) }}"class="btn btn-primary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_anime_new') }}"class="btn btn-primary">Create new</a>
{% endblock %}
