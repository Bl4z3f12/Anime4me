{% extends 'base.html.twig' %}

{% block title %}Anime{% endblock %}

{% block body %}
    <h1>Anime</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ anime.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ anime.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ anime.description }}</td>
            </tr>
            <tr>
                <th>Cover</th>
                <td>{% if anime.cover %}
                    <img src="{{ asset('images/anime/' ~ anime.cover) }}" alt="{{ anime.title }}" style="width: 100px;">
                {% endif %}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ anime.updatedAt ? anime.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_anime_index') }}">back to list</a>

    <a href="{{ path('app_anime_edit', {'id': anime.id}) }}">edit</a>

    {{ include('anime/_delete_form.html.twig') }}
{% endblock %}
