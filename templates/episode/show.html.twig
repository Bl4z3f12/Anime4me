{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1>Episode</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Cover</th>
                <td>{{ episode.cover }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ episode.updatedAt ? episode.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_episode_index') }}"class="btn btn-primary btn-lg btn-block">back to list</a>

    <a href="{{ path('app_episode_edit', {'id': episode.id}) }}"class="btn btn-primary btn-lg btn-block">edit</a>

    {{ include('episode/_delete_form.html.twig') }}
{% endblock %}
